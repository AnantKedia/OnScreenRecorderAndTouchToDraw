<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#efeaed"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        tools:ignore="UselessLeaf" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#107d6d"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <EditText
            android:id="@+id/video_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:textSize="20sp"
            android:hint="@string/enter_name_of_video"
            android:layout_marginStart="@dimen/d2"
            android:layout_marginEnd="@dimen/d1"
            android:padding="10dp"
            android:autofillHints="Anant Kedia"
            tools:ignore="TextFields,UnusedAttribute" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".06"
        tools:ignore="UselessLeaf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:orientation="horizontal"
        android:weightSum="1"
        >


        <TextView
            android:id="@+id/saveVideo"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="68dp"
            android:layout_weight=".5"
            android:text="Save Video"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg2"

            tools:ignore="HardcodedText,NestedWeights,SpUsage" />

        <TextView
            android:id="@+id/newVideo"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="68dp"
            android:layout_weight=".5"
            android:text="New Video"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg2"

            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".52"
        tools:ignore="UselessLeaf">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:gravity="end"
        android:clickable="false"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/made_by_anant_kedia"
            android:textSize="16sp"
            android:textStyle="italic"
            android:fontFamily="serif-monospace"
            />

    </RelativeLayout>


</LinearLayout>